doi = {10.1016/j.rse.2018.03.014},
file = {:home/francisco/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Vrieling et al. - 2018 - Vegetation phenology from Sentinel-2 and field cameras for a Dutch barrier island.pdf:pdf},
