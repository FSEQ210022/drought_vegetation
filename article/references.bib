	file = {PDF:/home/francsco/Zotero/storage/DUJWY7NF/2010-A_multiscalar_drought_index_sensitive_to_global_warming_The_standardized_precipitation_evapotranspiration_index.pdf:application/pdf},
}

@article{Zambrano2018,
	title = {Prediction of drought-induced reduction of agricultural productivity in {Chile} from {MODIS}, rainfall estimates, and climate oscillation indices},
