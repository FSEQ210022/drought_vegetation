	journal = {Remote Sensing},
	author = {Schucknecht, Anne and Meroni, Michele and Kayitakire, Francois and Boureima, Amadou and Schucknecht, Anne and Meroni, Michele and Kayitakire, Francois and Boureima, Amadou},
