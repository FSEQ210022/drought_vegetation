journal = {Reviews of Geophysics},
keywords = {drought,remote sensing},
number = {2},
pages = {452--480},
title = {{Remote sensing of drought: Progress, challenges and opportunities}},
url = {http://dx.doi.org/10.1002/2014RG000456.},
