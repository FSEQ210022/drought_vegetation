	journal = {Remote Sensing of Environment},
	author = {Vrieling, Anton and Meroni, Michele and Darvishzadeh, Roshanak and Skidmore, Andrew K. and Wang, Tiejun and Zurita-Milla, Raul and Oosterbeek, Kees and O'Connor, Brian and Paganini, Marc},
